<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="button_big_text">

        <!-- <item name="android:layout_width">fill_parent</item> -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:minHeight">35dip</item>
    </style>

    <style name="button_text">

        <!-- <item name="android:layout_width">fill_parent</item> -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">15sp</item>
        <!-- <item name="android:textStyle">bold</item> -->
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:minHeight">35dip</item>
    </style>

    <style name="bottom_button_bar">
        <item name="android:background">#e0e0e0</item>
        <item name="android:divider">@drawable/vertical_divider</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:showDividers">middle</item>
    </style>
    
     <style name="content_text_big">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="content_text">
        <item name="android:textSize">14dp</item>
        <!-- <item name="android:paddingTop">1dp</item> -->
        <!-- <item name="android:paddingBottom">1dp</item> -->
    </style>
     <style name="content_text_small">
        <item name="android:textSize">13dp</item>
        <!-- <item name="android:paddingTop">1dp</item> -->
        <!-- <item name="android:paddingBottom">1dp</item> -->
    </style>
    

    <style name="content_title">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#040404</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="content_title_small">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#040404</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="content_sub_title">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="content_no_data_text">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="content_error_text">
        <item name="android:textSize">20dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#ee1122</item>
    </style>

    <style name="edit_text">
        <item name="android:background">@drawable/custom_editfield</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>