<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_no_loaded_consignment"
        style="@style/content_no_data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/consignment_loaded_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ExpandableListView
            android:id="@+id/loaded_consignment_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:dividerHeight="1dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/consignment_loaded_footer"
        style="@style/bottom_button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <nz.co.guruservices.mobilecourier.custom.ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </nz.co.guruservices.mobilecourier.custom.ImageButton>

        <nz.co.guruservices.mobilecourier.custom.ImageButton
            android:id="@+id/bnt_unload_consignments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            custom:image_button_icon="@drawable/ic_unload"
            custom:image_button_text="@string/label_unload" >
        </nz.co.guruservices.mobilecourier.custom.ImageButton>
    </LinearLayout>

</LinearLayout>